<p id="notice"><%= notice %></p>

<h1 class ="pull-left">All Lists</h1>

<%= link_to (content_tag(:i, nil, class: 'fa fa-plus')), new_todo_list_path, :class => "btn btn-default pull-right" %>

<table class = "table">
<!--   <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead> -->

  <tbody>
  <% @todo_lists.each do |todo_list| %>
    <tr>
      <td><%= todo_list.title %></td>
      <td><%= todo_list.description %></td>
      <td><%= link_to (content_tag(:i, nil, class: 'fa fa-eye')), todo_list %>
      <td><%= link_to (content_tag(:i, nil, class: 'fa fa-pencil')), edit_todo_list_path(todo_list) %>
      <td><%= link_to(content_tag(:i, nil, class: 'fa fa-trash-o'), method: :delete, data: {confirm: 'Are you sure?'}) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
